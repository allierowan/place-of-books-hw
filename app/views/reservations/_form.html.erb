<%= form_for @reservation do |f| %>
  <div class="form-group">
    <%= f.label :name, "Name" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :due_date %>
    <%= f.date_field :due_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :overdue %>
    <%= f.text_field :overdue, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :returned_date, "Returned at" %>
    <%= f.date_field :returned_at, class: "form-control" %>
  </div>

  <%= f.submit "Save", class: "btn btn-primary" %>

<% end %>
