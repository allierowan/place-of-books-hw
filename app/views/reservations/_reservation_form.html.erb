<h2>Reserve <%= @reservation.book.name %></h2>
<%= form_for @reservation, url: book_reservation_path do |f| %>
  <div class="form-group">
    <%= f.label :name, "Name" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :due_date %>
    <%= f.date_field :due_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :returned_date, "Returned at" %>
    <%= f.date_field :returned_at, class: "form-control" %>
  </div>

  <%= f.submit "Save", class: "btn btn-primary" %>

<% end %>
