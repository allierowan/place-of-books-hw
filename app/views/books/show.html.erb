<%= render 'nav' %>
<div class="container-fluid">
  <h3><%= @book.name %></h3>
  <p>
    ISBN: <%= @book.isbn_number %>
  </p>
  <p class="well">
    <%= @book.description %>
  </p>
  <div class="clearfix">
    <%= link_to "Edit this book", edit_book_path(@book.id), class: "btn btn-primary"%>
    <%= form_tag delete_book_path(@book.id), method: :delete do %>
      <%= submit_tag "Delete book", class: "btn btn-danger" %>
    <% end %>
  </div>
</div>
